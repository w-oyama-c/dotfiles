[user]
  useConfigOnly = true
[init]
  defaultBranch = main
[pretty]
  logview = %C(yellow)%m %h%C(reset) - %s %C(green)%cd %C(bold blue)%an<%ae>%C(reset)%C(auto)%d%C(reset)%n
  reflogview = %C(yellow)%h%C(reset) - %C(green)%gd %C(bold blue)<%an> %C(reset)%gs %C(auto)%d%C(reset)
[alias]
  # 
  call = "!f() { cmd=\"$1\"; shift; git \"$cmd\" \"$@\"; }; f"

  ad = add

  b  = branch -vv
  ba = "!git b -a"
  bd = !git branch --merged | egrep -v '\\*|develop|staging|master|main' | xargs git branch -d

  cm = commit -v

  co = checkout

  cp = cherry-pick

  cnf  = config
  scnf = "!git cnf --system"
  gcnf = "!git cnf --global"
  lcnf = "!git cnf --local"

  df   = diff
  dft  = difftool
  dfc  = "!git df --cached"
  dftc = "!git dft --cached"
  dff  = "!git df --name-status"
  dffc = "!git df --cached --name-status"
  dfl  = "!git df --name-only"
  dflc = "!git df --cached --name-only"

  wm  = "!git dft --tool=winmerge"
  wmc = "!git wm --cached"

# fe = fetch --all --append --prune
  fe = "!git fetch --all --append --prune; echo; echo Current branches:; git b"

  mg = merge

  pbd = !git pull && git bd

  rb = rebase

  rl = reflog --pretty=reflogview

  skip   = update-index --skip-worktree
  unskip = update-index --no-skip-worktree

  sts  = stash
  stsl = "!git sts list"
  stsp = "!git sts pop"
  stss = "!git sts save --include-untracked"

  st   = status
  sst  = "!git st --short"
  sti  = "!git st --ignored"
  ssti = "!git st --short --ignored"

  sw = switch

  lg  = log --graph --abbrev-commit --date=format:'%Y/%m/%d %H:%M:%S' --pretty=logview
  lgf = "!git lg --name-status"

  tg = tag -l --sort=-*committerdate --format='%(color:yellow)(%(objectname:short)) %(color:no-bold green)commit:%(*committerdate:short)\t%(color:bold yellow)%(tag)\t%(color:bold blue)<%(taggername)>\t%(color:reset)%(subject)\n%(body)'

  ignore = rm --cached
[log]
  graphColors = bold blue,bold red,bold cyan,bold green,bold magenta
[merge]
  ff = false
[pull]
  ff = only
  autostash = true
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  required = true
  clean = git-lfs clean -- %f
[color]
  ui = true
[color "status"]
  added = yellow
  changed = green
  untracked = bold blue
  deleted = red
  localBranch = bold green
  remoteBranch = bold red
[color "branch"]
  current = bold green
  remote = bold red
  upstream = bold blue
[color "diff"]
  meta = bold cyan
  frag = bold yellow
  func = bold blue
  whitespace = red
  old = 167 bold
  new = 030 bold
[pager]
  log = '/usr/local/bin/diff-highlight' | less
  show = '/usr/local/bin/diff-highlight' | less
  diff = '/usr/local/bin/diff-highlight' | less
[diff]
  toll = vimdiff
  compactionHeuristic = true
[diff "cp932"]
  textconv = iconv -f cp932 -t utf-8
[diff "sjis"]
  textconv = iconv -f sjis -t utf-8
[diff "eucjp"]
  textconv = iconv -f eucjp -t utf-8
[core]
  editor = vi -c 'set fenc=utf-8'
  excludesfile = "~/.gitignore"
  autoCRLF = false
  pager = LESSCHARSET=utf-8 less
  quotepath = false
  commentChar = ";"
  preloadindex = true
  fscache = true
  symlinks = true
  fileMode = false
[difftool]
  prompt = false
[gc]
  auto = 256
[fetch]
  prune = true
[rebase]
  autosquash = true
  autostash = true
[credential "https://github.com"]
  helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
  helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential

